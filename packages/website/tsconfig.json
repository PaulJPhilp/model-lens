{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": ".",
		"types": [],
		"paths": {
			"@/*": ["./src/*"],
			"@services/*": ["./src/services/*", "./lib/services/*"],
			"@db/*": ["./src/db/*"],
			"@lib/*": ["./src/lib/*", "./lib/*"],
			"@routes/*": ["./src/routes/*"],
			"@middleware/*": ["./src/middleware/*"],
			"@tests/*": ["./tests/*"]
		}
	},
	"include": ["src/**/*.ts", "lib/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules", "dist", ".next"]
}
