# Service Configuration
# Retry delay for external API calls (milliseconds)
MODEL_SERVICE_RETRY_MS=1000

# Retry delay for database operations (milliseconds)
DB_RETRY_MS=1000

# Development Configuration
# Set to 'development' for local development
NODE_ENV="development"

# Authentication (for production)
# Replace with actual auth implementation (NextAuth.js, Clerk, Auth0, etc.)
# AUTH_SECRET="your-secret-key"
# AUTH_URL="http://localhost:3000"

# External API Keys (when needed for future integrations)
# OPENAI_API_KEY="your-openai-key"
# ANTHROPIC_API_KEY="your-anthropic-key"
# HUGGINGFACE_API_KEY="your-huggingface-key"

# Rate Limiting (for production)
# UPSTASH_REDIS_REST_URL="your-upstash-url"
# UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Monitoring and Logging
# SENTRY_DSN="your-sentry-dsn"
# LOG_LEVEL="info" # debug, info, warn, error

# Feature Flags
# ENABLE_CHAT=true
# ENABLE_TIMELINE=true
# ENABLE_FILTERS=true
